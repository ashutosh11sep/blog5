<%= form_for :book, url: books_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </p>
 
 <p>
    <%= f.label :created_by %><br>
    <%= f.text_area :created_by %>
  </p>

  <p>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </p>

    
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', books_path %>