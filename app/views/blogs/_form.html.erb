<%= form_for(@blog) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :location%><br>
    <%= f.text_area :location %>
  </p>

  <p>
    <%= f.label :description%><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>