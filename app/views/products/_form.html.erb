<%= form_for @product do |f| %>
 
<p>
    <%= f.label :name %><br>
    <%=f.text_field :name %>
  </p>
   <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </p>
 
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
